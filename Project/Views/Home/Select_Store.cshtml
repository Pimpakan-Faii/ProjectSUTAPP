}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Shop Homepage - Start Bootstrap Template</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="@Url.Content("~/Content/Style1.css")" rel="stylesheet" type="text/css" />
    <link href="css/styles.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Prompt&display=swap" rel="stylesheet">

    <style>

        .comment-section {
            max-height: 455px;
            max-width: 90%;
            border-radius: 15px;
            background-color: #3f3f3f;
            overflow-y: scroll;
        }

        .comment {
            height: 5%;
            padding: 2%;
            background-color: #ffff;
            color: black;
        }
    </style>

</head>



<body>
    <!-- Navigation-->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container px-4 px-lg-5">
            <b><a class="navbar-brand" href="@Url.Action("Index", "Home")">SUT IN SIDE</a></b>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">

                <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4">
                    <!-- Menu Navigation -->
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Coupon")">โปรโมชั่น</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Safe")">ร้านนี้ปลอดภัยชัวร์</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Popular")">ร้านอาหารยอดนิยม</a></li>

                </ul>

                <div class="d-flex">
                    <!-- Menu right -->
                    @Html.Partial("_LoginPartialEdit")
                </div>
            </div>
        </div>
    </nav>

    <!-- Header-->
    <br />
    <header class="bg-dark-edit py-5">
        <!-- Check Login-->
        <div class="container px-4 px-lg-5 my-5">
            @if (Request.IsAuthenticated)
            {
                <p><span class="display-4 fw-bolder">สวัสดีคุณ @User.Identity.GetUserName()</span></p>
                <!--<p><span class="lead fw-normal text-black-50 mb-0">คะแนนสะสมของคุณ : 0 point</span></p>-->
            }
            else
            {
                <p><span class="display-4 fw-bolder">สวัสดี ยินดีต้อนรับ</span></p>
            }


        </div>
        <!--</div>-->

    </header>

    <!-- Section-->
    <section class="py-5">
        <div class="container px-4 px-lg-5 mt-5">
            <!-- row-cols-xl-2 -->
            <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-2 justify-content-center">
                <div class="col mb-5">
                    <div class="card" style="max-height: auto; ">
                        <!-- Product image-->
                        <br />
                         @foreach (Store data in Model.storelist)
                         {
                             <img class="" src="@Url.Content("~/Content/images/" + (@data.url))" style="max-width: 90%; margin-left:auto;  margin-right:auto; " alt="..." />


                        <!-- Product details-->
                        <div class="text-start" style="margin-left:6%">
                            <b style=" font-size: 25px; ">@data.name</b> <br />
                            <span class="d-flex small mb-2">
                                @data.time
                                &nbsp;
                                &nbsp;
                                &nbsp;
                                @for (var i = 1; i <= @data.Review; i++)
                                {
                                    <span class="bi-star-fill text-warning"></span>
                                }
                            </span>
                        </div>
                         

                        using (Html.BeginForm("Comments", "Home", FormMethod.Post))
                        {
                            <form class="form-group">
                                <div>
                                    <label style="margin-left:6%">Comment :</label>
                                    <!-- disabled -->
                                    <input type="text" name="Commentstxt" class="form-control" style="width: 90%; height: 300%; margin-left:auto;  margin-right:auto; " required/>
                                </div>


                                <div class="card-body p-4">
                                    <div class="text-center">
                                        <!-- Product name-->
                                        @*<input type="submit" class="btn btn-outline-dark mt-autol" style="width: 100%" value="ส่ง" />*@
                                        @*<button class="btn btn-outline-dark mt-autol" name="comment_id" onclick="GetId(@data.product_id.ToString())" type="submit">ส่ง</button>*@
                                        <button class="btn btn-outline-dark mt-autol" style="width: 30%" type="submit" name="comment_id" value="@data.product_id">ส่ง</button>
                                        @*<a class="btn btn-outline-dark mt-auto" style="width: 100%" href="#">ส่ง</a>*@

                                    </div>
                                </div>
                            </form>
                        }
                     }
                        <!-- Product actions-->

                    </div>
                </div>


                <!-- Text Comments-->
                <div class="col mb-5">
                    <div class="comment-section">
                        @foreach (Comment c in Model.commentlist)
                        {
                                <div class="comment">
                                    <b>@c.UserName</b>
                                    <p class="text-black-50">@c.Text</p>
                                </div>
                        }
                    </div>
                </div>


            </div>

        </div>
    </section>
    <!-- Footer-->
    <footer class="py-5 bg-dark">
        <div class="container"><p class="m-0 text-center text-white">Copyright &copy; Your Website 2021</p></div>
    </footer>
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="js/scripts.js"></script>
</body>
</html>

