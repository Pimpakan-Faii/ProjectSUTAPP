                                <form class="user">

                                    <div class="form-group">
                                        <b class="control-label col-md-2">ชื่อโปรโมชั่น</b>
                                        <div class="col-md-10">
                                            @Html.DisplayFor(model => model.C_Name)
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <b class="control-label col-md-2">ชื่อร้านที่ใช้ได้</b>
                                        <div class="col-md-10">
                                            @Html.DisplayFor(model => model.C_Store)
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <b class="control-label col-md-2">วันหมดอายุโปโมโชั่น</b>
                                        <div class="col-md-10">
                                            @Html.DisplayFor(model => model.Expire)
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <b class="control-label col-md-2">โปรโมชั่นเดือนนี้</b>
                                        <div class="col-md-10">
                                            @Html.DisplayFor(model => model.Des)
