<!DOCTYPE html>
<html lang="en">

<head>
    <title>Delete User</title>
</head>

<body>
    <div class="container">
        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <!-- <div class="col-lg-6 d-none d-lg-block bg-login-image"></div> -->

                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">Delete User</h1>
                                </div>

                                <form class="user">

                                    <div class="form-group">
                                        <b class="control-label col-md-2">Email</b>
                                        <div class="col-md-10">
                                            @Html.DisplayFor(model => model.Email)
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <b class="control-label col-md-2">User Name</b>
                                        <div class="col-md-10">
                                            @Html.DisplayFor(model => model.UserName)
                                        </div>
                                    </div>

                                </form>

                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()
                                    <div class="form-actions no-color">
                                        <input type="submit" value="Delete" class="btn btn-outline-dark mt-auto" />
                                        &nbsp;
                                        @Html.ActionLink("Back to List", "Index", "AspNetUsers", null, new { @class = "btn btn-outline-dark mt-auto " })
                                    </div>
                                }

                            </div>

                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

</body>
</html>