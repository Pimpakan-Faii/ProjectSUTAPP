<!DOCTYPE html>
<html lang="en">

<head>
    <title>Edit Safe Store</title>
</head>

<body>
    <div class="container">
        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <!-- <div class="col-lg-6 d-none d-lg-block bg-login-image"></div> -->

                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">Edit Safe Store</h1>
                                </div>
                                @using (Html.BeginForm("Edit", "Safes", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                {
                                    @Html.AntiForgeryToken()

                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    @Html.HiddenFor(model => model.Safe_id)

                                    <div class="form-group">
                                        <b class="control-label col-md-2">ชื่อร้านที่ปลอดภัย</b>
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.Safe_name, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Safe_name, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <b class="control-label col-md-2">รูปใบรับรองฉีดวัคซีน</b>
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.Safe_img, new { htmlAttributes = new { @class = "form-control", type = "file" } })
                                            @Html.ValidationMessageFor(model => model.Safe_img, "", new { @class = "text-danger" })
                                        </div>
                                    </div>


                                    <div class="form-group">
                                        <input type="submit" value="Save" class="btn btn-outline-dark mt-auto " />
                                        &nbsp;
                                        @Html.ActionLink("Back to List", "Index", "Safes", null, new { @class = "btn btn-outline-dark mt-auto " })
                                    </div>

                                }

                            </div>

                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

</body>
</html>